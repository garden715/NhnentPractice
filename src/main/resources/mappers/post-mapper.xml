<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Maper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jungwon.mapper.PostMapper">


	<!-- 이거접근 할 때 namespace.id로 접근 --> 
	<select id="getNow" resultType="string">
		select now()
	</select>
	
	<insert id="register">
		insert into post(email, password, name, contents)
		values( #{email}, #{password}, #{name}, #{contents})
	</insert>
	
	<select id="get" resultType="com.jungwon.domain.Post">
		select *
		from post
		where id = #{id}
	</select>
	
	<select id="getList" resultType="com.jungwon.domain.Post">
		select *
		from post;
	</select>
</mapper>