<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Maper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jungwon.mapper.MemberMapper">


	<!-- 이거접근 할 때 namespace.id로 접근 --> 
	<select id="getNow" resultType="string">
		select now()
	</select>
	
	<insert id="register">
		insert into tbl_member(userid, userpw, username, email)
		values( #{userid}, #{userpw}, #{username}, #{email})
	</insert>
	
	<select id="get" resultType="com.jungwon.domain.MemberVO">
		select *
		from tbl_member
		where userid = #{userid}
	</select>
	
	<select id="getList" resultType="com.jungwon.domain.MemberVO">
		select *
		from tbl_member;
	</select>
</mapper>